---
import "@fontsource/merriweather/300.css";
import "@fontsource/merriweather/700.css";
import "@fontsource/roboto/400.css";
import "@fontsource/roboto/700.css";

import AboutMe from "@components/home/about-me.astro";
import Experiencies from "@components/home/experiencies.astro";
import Projects from "@components/home/projects.astro";
import Hero from "@components/home/hero.astro";
import FooterAction from "@components/home/footer-action.astro";

import Layout from "@layouts/home.astro";
---

<Layout title="Carlos Delbarre :: FrontEnd Developer">
	<main>
		<Hero />
		<Experiencies />
		<Projects />
		<AboutMe />
		<FooterAction />
	</main>
</Layout>

<style is:global>
	body {
		@apply !text-slate-600;
		font-family: "Roboto", system-ui, -apple-system, BlinkMacSystemFont,
			"Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans",
			"Helvetica Neue", sans-serif;
	}

	p {
		@apply text-base md:text-[17px] leading-relaxed;
		color: inherit;
	}

	h1,
	h2,
	h3 {
		font-family: "Merriweather", system-ui, -apple-system,
			BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell,
			"Open Sans", "Helvetica Neue", sans-serif;
		@apply text-slate-800 !leading-[1.1];
	}
</style>
